<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res/dk.tweenstyle.android.app">
    
    <TextView android:id="@+id/lblProductManufacturer"
        app:layout_row="0"
        app:layout_column="0"
        android:textIsSelectable="true" />
    
    <TextView android:id="@+id/lblProductName"
        app:layout_row="1"
        app:layout_column="0"
        android:textIsSelectable="true" />
    
    <TextView android:id="@+id/lblProductNumber"
        app:layout_row="2"
        app:layout_column="0"
        android:textIsSelectable="true" />
    
    <TextView android:id="@+id/lblProductOldPrice"
        app:layout_row="3"
        app:layout_column="0"
        android:textIsSelectable="true" />
    
    <TextView android:id="@+id/lblProductPrice"
        app:layout_row="4"
        app:layout_column="0"
        android:textIsSelectable="true" />

</android.support.v7.widget.GridLayout>